{
  "name": "paradise-restaurant-app",
  "version": "2.0.0",
  "description": "Paradise Family Restaurant & Bake Shop - Production-ready menu application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run prebuild && vite build && npm run postbuild",
    "preview": "vite preview",
    "prebuild": "node -e \"require('./build.config.js').runPreBuildChecks()\"",
    "postbuild": "node -e \"require('./build.config.js').runPostBuildOptimizations()\"",
    "check-prod": "tsx src/lib/productionChecker.ts --check",
    "analyze": "ANALYZE=true npm run build",
    "test": "echo 'Tests would run here'",
    "lint": "echo 'Linting would run here'",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level moderate",
    "start": "npm run preview"
  },
  "dependencies": {
    "@github/spark": "^0.1.0",
    "@phosphor-icons/react": "^2.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-code": "^2.0.0",
    "sonner": "^1.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
